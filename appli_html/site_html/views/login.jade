extends layout

block content
	h1	 Veuillez vous connectez
	form#formConnexion(name="addbook",method="post",action="/addbook")
		input#inputLogin(type="text", placeholder="Email", name="email", required='')
		input#inputPassword(type="password", placeholder="Mot de passe", name="mdp", required='')
		br
		input#choiceLibraire(type='radio' name='typeuser' value='libraire', checked '')
